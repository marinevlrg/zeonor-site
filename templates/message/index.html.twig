{% extends 'base.html.twig' %}
{% block body %}
<div>
	<h3 class="mt-3">Message pour l'admin :</h3>
	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Prénom</th>
				<th>Nom</th>
				<th>Email</th>
				<th>Téléphone</th>
				<th>Message</th>
				<th>actions</th>
			</tr>
		</thead>
		<tbody>
			{% for message in messages %}
				<tr>
					<td>{{ message.id }}</td>
					<td>{{ message.prenom }}</td>
					<td>{{ message.nom }}</td>
					<td>{{ message.email }}</td>
					<td>{{ message.telephone }}</td>
					<td>{{ message.message }}</td>
					<td>
						<a href="{{ path('app_message_show', {'id': message.id}) }}">Voir</a>
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="7">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
	<a class="bouton" href="{{ path('app_admin_index') }}" title="retour">retour à la liste</a>
</div>
{% endblock %}