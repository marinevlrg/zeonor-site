{% extends 'base.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
<h2 class="h2titrepage">Message de :</h2>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ message.id }}</td>
            </tr>
            <tr>
                <th>Prénom</th>
                <td>{{ message.prénom }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ message.nom }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ message.email }}</td>
            </tr>
            <tr>
                <th>Téléphone</th>
                <td>{{ message.téléphone }}</td>
            </tr>
            <tr>
                <th>Message</th>
                <td>{{ message.message }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_admin_index') }}">Retour à la liste</a>

    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
