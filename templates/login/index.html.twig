{% extends 'base.html.twig' %}

{% block title %}Se connecter
{% endblock %}


{% block body %}
	<div class="d-flex flex-column justify-content-center align-items-center p-2 gap-2">
		<h2 class="h2titrepage">Se connecter</h2>
		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		<form action="{{ path('app_login') }}" method="post" class="d-flex flex-column gap-2 align-items-center w-100">
			<div class="d-flex flex-row justify-content-end gap-2 w-100">
				<label class="w-25" for="username">Email:</label>
				<input class="col" type="text" id="username" name="_username" value="{{ last_username }}">
			</div>

			<div class="d-flex flex-row justify-content-end gap-2 w-100">
				<label class="w-25" for="password">Password:</label>
				<input class="col" type="password" id="password" name="_password">
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="bouton m-1 w-50 justify-self-center" type="submit" title="se connecter">Se connecter</button>
		</form>
	</div>

{% endblock %}
